{
  "name": "telegram-bot-assistant",
  "version": "1.0.0",
  "description": "Telegram bot assistant with todo, shopping list, and calendar management using OpenAI",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "type-check": "tsc --noEmit",
    "migrate": "tsx src/database/migrate.ts"
  },
  "keywords": [
    "telegram",
    "bot",
    "assistant",
    "todo",
    "calendar",
    "shopping"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/node-cron": "^3.0.11",
    "date-fns-tz": "^3.0.0",
    "dotenv": "^16.3.1",
    "mysql2": "^3.6.5",
    "node-cron": "^4.2.1",
    "node-telegram-bot-api": "^0.66.0",
    "openai": "^4.20.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/node-telegram-bot-api": "^0.64.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
